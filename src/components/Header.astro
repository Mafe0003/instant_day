---
---
<!-- Navigation -->
<div 
  x-data="{ open: false }" 
  class="relative"
>
<!-- Logo (top-left, always visible) -->
<a href="/" class="fixed top-4 left-4 z-50">
  <img src="/images/logo.svg" alt="Logo" class="h-8 md:h-10 w-auto" />
</a>

  <!-- Desktop Menu (right side, separate buttons) -->
<nav class="hidden lg:flex flex-col gap-35 fixed right-4 top-1/8 items-center z-50"
     style="font-family: 'Bowlby One SC', sans-serif;">
  <a href="#im_in" 
     class="bg-[#E9F422] text-black px-4 py-2 rounded-full font-bold rotate-90 
            hover:bg-gray-800 hover:text-[#E9F422] transition-colors duration-300">
    I'm in
  </a>
  <a href="/why" 
     class="bg-[#E9F422] text-black px-4 py-2 rounded-full font-bold rotate-90 
            hover:bg-gray-800 hover:text-[#E9F422] transition-colors duration-300">
    Why instants
  </a>
  <a href="/winners" 
     class="bg-[#E9F422] text-black px-4 py-2 rounded-full font-bold rotate-90 
            hover:bg-gray-800 hover:text-[#E9F422] transition-colors duration-300">
    Winners
  </a>
  <a href="/about" 
     class="bg-[#E9F422] text-black px-4 py-2 rounded-full font-bold rotate-90 
            hover:bg-gray-800 hover:text-[#E9F422] transition-colors duration-300">
    About
  </a>
</nav>


  <!-- Mobile Burger Button -->
  <button 
  @click="open = true" 
  x-show="!open"
    class="lg:hidden fixed top-4 right-4 z-50">
  <img src="/images/burgermenu.svg" alt="burgermenu" class="h-8 w-8" />
</button>

  <!-- Mobile Slide-out Menu -->
  <div 
    class="fixed top-0 right-0 h-full w-64 bg-[#E9F422] transform transition-transform duration-300 ease-in-out shadow-xl z-40 lg:hidden"
    :class="open ? 'translate-x-0' : 'translate-x-full'"
    style="font-family: 'Bowlby One SC', sans-serif;"
  >
  <!-- Close button -->
<button 
  @click="open = false"
  class="absolute top-4 right-4 z-50"
>
  <img src="/images/back_burgermenu.svg" alt="closemenu" class="h-8 w-8" />
</button>
<nav class="flex flex-col items-start gap-6 p-8 text-black text-lg mt-12">
      <a href="/im-in" @click="open = false" class="group flex flex-col items-start">
  I'm in
  <img src="/images/hover.svg" alt="hover" 
       class="w-full h-auto opacity-0 group-hover:opacity-100 transition" />
</a>
      <a href="/why-instants" @click="open = false" class="group flex flex-col items-start">Why instants 
      <img src="/images/hover.svg" alt="hover" 
       class="w-full h-auto opacity-0 group-hover:opacity-100 transition" />
      </a>


      <a href="/winners" @click="open = false" class="group flex flex-col items-start">Winners
        <img src="/images/hover.svg" alt="hover" 
       class="w-full h-auto opacity-0 group-hover:opacity-100 transition" />
      </a>


      <a href="/about" @click="open = false" class="group flex flex-col items-start">About
      <img src="/images/hover.svg" alt="hover" 
       class="w-full h-auto opacity-0 group-hover:opacity-100 transition" />
      </a>
    </nav>
  </div>
</div>
