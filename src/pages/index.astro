    src="/images/coming_soon.png" 
    alt="Instant pic" 
    class="col-start-1 col-span-7 w-full max-w-full h-auto filter grayscale hover:grayscale-0 transition duration-300 hover:scale-110"
  >
  
  <Heading htmlheading="h4" size="xsmall" font="h4" stylingclasses="col-start-9 col-span-4">
    “I love Polaroids because each photo becomes a keepsake — a memory you can touch and relive.”
    -Sarah
  </Heading>
</section>


<script>
  // Gør countdown global, så Alpine kan finde den
  window.countdown = function(target) {
    return {
      targetDate: new Date(target),
      months: 0,
      days: 0,
      hours: 0,
      minutes: 0,
      seconds: 0,

      startCountdown() {
        this.updateTime();
        setInterval(() => this.updateTime(), 1000);
      },

      updateTime() {
        const now = new Date();
        let diff = this.targetDate.getTime() - now.getTime(); // korrekt datohåndtering

        if (diff < 0) diff = 0;

        const totalSeconds = Math.floor(diff / 1000);

        this.seconds = totalSeconds % 60;
        this.minutes = Math.floor(totalSeconds / 60) % 60;
        this.hours = Math.floor(totalSeconds / 3600) % 24;

        const totalDays = Math.floor(totalSeconds / (3600 * 24));
        this.days = totalDays % 30;
        this.months = Math.floor(totalDays / 30);
      }
    }
  }
  </script>
  


