<script>
  // G√∏r countdown global, s√• Alpine kan finde den
 (window as any).countdown = function(target: string){ 
    return {
      targetDate: new Date(target),
      months: 0,
      days: 0,
      hours: 0,
      minutes: 0,
      seconds: 0,

      startCountdown() {
        this.updateTime();
        setInterval(() => this.updateTime(), 1000);
      },

      updateTime() {
        const now = new Date();
        let diff = this.targetDate.getTime() - now.getTime(); // korrekt datoh√•ndtering

        if (diff < 0) diff = 0;

        const totalSeconds = Math.floor(diff / 1000);

        this.seconds = totalSeconds % 60;
        this.minutes = Math.floor(totalSeconds / 60) % 60;
        this.hours = Math.floor(totalSeconds / 3600) % 24;

        const totalDays = Math.floor(totalSeconds / (3600 * 24));
        this.days = totalDays % 30;
        this.months = Math.floor(totalDays / 30);
      }
    }
  }
