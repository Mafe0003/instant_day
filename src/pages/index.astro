<section
  class="flex flex-col items-center gap-8 py-10 lg:py-20 justify-center"
  x-data="countdown('2025-10-19T00:00:00')"
  x-init="startCountdown()"
>


  <div class="flex gap-3 lg:gap-8 text-center">
    <div>
      <div class="w-20 h-20 lg:w-40 lg:h-40 flex items-center justify-center text-[40px] lg:text-[84px] font-display font-bold bg-stone-400 text-[var(--color-dark)] rounded-lg shadow-lg transition-transform duration-300" x-text="months">0</div>
